.hero-img
  width 100%
  height 100%
  position fixed

  img
    max-width 100%
    max-height 100%
    position absolute
    bottom 0
    left 0

.hero
  height 60%
  width 100%
  position absolute

  .logo
    left 10%
    position relative
    width 551px
    height 92px
    top 50%
    max-width 100%

  .location
    position relative
    left 10%
    width 259px
    height 42px
    top 50%
    margin-left 161px

  .logo, .location, img
    max-width 100%

.hero-margin
  position relative
  height 70%

@media (max-width: 700px)
  .hero
    height 60%

    .logo
      left 0
      top 50%

    .location
      position relative
      left 0
      top 50%
      margin-left 161px

@media (max-width: 500px)
  .hero-margin
    display none

  .hero-img
    display none

  .hero
    height 200px

    .logo
      left 0
      top 0

    .location
      left 0
      top 0
      margin 0 auto
